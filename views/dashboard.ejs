<%- include('layout', { title: title, body: `
<div class="row mt-4">
  <div class="col-md-4 mb-4">
    <div class="card">
      <div class="card-body text-center">
        <h2 class="card-title">
          <% if (user.avatar) { %>
            <img src="${user.avatar}" alt="${user.username}" class="rounded-circle mb-3" style="width: 100px; height: 100px;">
          <% } else { %>
            <i class="fas fa-user-circle fa-5x mb-3"></i>
          <% } %>
          <br>${user.displayName || user.username}
        </h2>
        <p class="card-text">Email: ${user.email}</p>
        <p class="card-text">Member since: ${new Date(user.createdAt).toLocaleDateString()}</p>
      </div>
    </div>
  </div>
  
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h5>
          <i class="fas fa-tools"></i> GitHub Integration
        </h5>
      </div>
      <div class="card-body">
        <% if (githubConnected && githubToken) { %>
          <p class="alert alert-success">
            <i class="fas fa-check-circle"></i> Your GitHub account is connected.
          </p>
          <div class="d-grid gap-2">
            <a href="/github/repos" class="btn btn-primary">
              <i class="fas fa-list"></i> View My Repositories
            </a>
            <a href="/github/create" class="btn btn-success">
              <i class="fas fa-plus-circle"></i> Create New Repository
            </a>
          </div>
        <% } else { %>
          <p>Connect your GitHub account to create repositories and upload code:</p>
          <a href="/auth/github" class="btn btn-dark">
            <i class="fab fa-github"></i> Connect GitHub
          </a>
        <% } %>
      </div>
    </div>
    
    <div class="card mt-4">
      <div class="card-header">
        <h5>
          <i class="fas fa-info-circle"></i> App Information
        </h5>
      </div>
      <div class="card-body">
        <p>This demo application showcases:</p>
        <ul>
          <li>Local username/password authentication</li>
          <li>Google OAuth login</li>
          <li>GitHub OAuth login with repository access</li>
          <li>Creating GitHub repositories via API</li>
          <li>Uploading code to GitHub repositories</li>
        </ul>
        <p>Try connecting your GitHub account to create repositories!</p>
      </div>
    </div>
  </div>
</div>
` }) %>
